@using Taxi_Depot.DAL;
@using Taxi_Depot.DAL.Models;
@model IEnumerable<Order>;
@{
    ViewData["Title"] = "Заказы";
}

<div>
    @if (Model.Count() <= 0)
    {
        <h1 class="display-1 text-center" style="font-size: 50px; margin-bottom: 50px">Заказов нет</h1>
    }
    else
    {
        <h1 class="display-2 text-center" style="font-size: 50px; margin-bottom: 50px">Заказы</h1>
    }

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="row col-12" style="margin-bottom: 25px;">
                <h2 class="col-8" style="font-size: 26px">@item.FullName @item.Status - @item.Cost руб</h2>

                <div class="col-4 row align-text-bottom" style="display: flex; justify-content: space-around;">
                    <a class="btn btn-warning" asp-controller="Orders" asp-action="EditOrder" asp-route-id="@item.Id">Редактировать</a>
                </div>
            </div>

        </div>
    }
</div>
