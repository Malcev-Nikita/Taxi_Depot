@using Taxi_Depot.DAL;
@using Taxi_Depot.DAL.Models;
@model IEnumerable<Transport>;
@{
    ViewData["Title"] = "Водители";
}

<div>
    @if (Model.Count() <= 0)
    {
        <div style="text-align: center;">
            <h1 class="display-1 text-center" style="font-size: 50px; margin-bottom: 20px;">У водителя пока что нет транспорта</h1>
            <a class="col-2 btn btn-success" asp-controller="Drivers" asp-action="InsertTransport" style="margin-bottom: 50px">Добавить</a>
        </div>
    }
    else
    {
        <div style="text-align: center;">
            <h1 class="display-1 text-center" style="font-size: 50px; margin-bottom: 20px;">Машины водителя</h1>
            <a class="col-2 btn btn-success" asp-controller="Drivers" asp-action="InsertTransport" style="margin-bottom: 50px">Добавить</a>
        </div>
    }

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="row col-12" style="margin-bottom: 25px;">
                <h1 class="col-8" style="font-size: 26px">@item.Color @item.Mark @item.StateNumber</h1>

                <div class="col-4 row align-text-bottom" style="display: flex; justify-content: space-around;">
                    <a class="btn btn-danger" asp-controller="Drivers" asp-action="DeleteTransport" asp-route-id="@item.Id">Удалить</a>
                </div>
            </div>

        </div>
    }
</div>