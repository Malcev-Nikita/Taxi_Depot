@using Taxi_Depot.DAL;
@using Taxi_Depot.DAL.Models;
@model IEnumerable<Driver>;
@{
    ViewData["Title"] = "Водители";
}

<div>
    @if (Model.Count() <= 0)
    {
        <h1 class="display-1 text-center" style="font-size: 50px; margin-bottom: 50px">Водителей нет</h1>
    }
    else
    {
        <h1 class="display-2 text-center" style="font-size: 50px; margin-bottom: 50px">За рулём</h1>
    }

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="row col-12" style="margin-bottom: 25px;">
                <h2 class="col-8" style="font-size: 26px">@item.Surname @item.Name (@item.Phone)</h2>

                <div class="col-4 row align-text-bottom" style="display: flex; justify-content: space-around;">
                    <a class="btn btn-info" asp-controller="Drivers" asp-action="ViewTransports" asp-route-id="@item.Id">Посмотреть</a>
                    <a class="btn btn-warning" asp-controller="Drivers" asp-action="EditDriver" asp-route-id="@item.Id">Редактировать</a>
                </div>
            </div>

        </div>
    }
</div>
